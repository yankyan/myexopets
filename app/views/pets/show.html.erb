<table class="table">
<tr>
 <th>Владелец:<br> <%= @pet.user.nikname %></th>
  <th>Идентификатор питомца:<br> <%= @pet.name %></th>
  <th>Пол:<br> <%= @pet.sex %></th>
  <th>Вид:<br> <%= @pet.species %></th>
  <th>Дата рождения питомца:<br> <%= @pet.bday %></th>
  <th>Интервал кормления:<br> <%= @pet.feedtimes %> (в днях)</th>
</tr>
</table>
<strong>Описание:</strong>   <%= @pet.desk %>





<table class="table table-inverse">
  <thead>
  <tr>
    <th>Дата кормления</th>
    <th>Дополнительная информация</th>

  </tr>
  </thead>

  <tbody>
<% @pet.feeds.order(:date).reverse_order.each do |feed| %>


    <td><%= feed.date %></td>
      <td><%= feed.desk %></td>

      <td><%= link_to 'Удалить', feed, method: :delete, data: { confirm: 'Вы уверенны?' }, class: "btn btn-danger btn-sm" %></td>

    </tr>
<% end %>
</tbody>
</table>
<%= link_to 'Покормить', pets_feeding_path(@pet), class: "btn btn-success" %>
<%= link_to 'Редактировать анкету питомца', edit_pet_path(@pet), class: "btn btn-success" %>

<%= link_to 'Удалить всю информацию о питомце', @pet, method: :delete, data: { confirm: 'Вы уверенны?' }, class: "btn btn-danger" %>