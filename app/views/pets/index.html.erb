<p id="notice"><%= notice %></p>

<h1>Ваши животные</h1>

<table border="1" >
  <thead>
    <tr>
      <th>Имя</th>
      <th>Описание</th>
      <th>Дата рождения</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>

        <td><%= pet.name %></td>
        <td><%= pet.desk %></td>
        <td><%= pet.bday %></td>
        <td><%= link_to 'Показать', pet %></td>
        <td><%= link_to 'Изменить', edit_pet_path(pet) %></td>
        <td><%= link_to 'Удалить', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%  if user_signed_in? %>
<%= link_to 'New Pet', new_pet_path %>
<% end %>