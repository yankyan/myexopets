

<h1>Ваши животные</h1>

<table class="table table-inverse">
  <thead>
    <tr>
      <th><%= sortable "name", "Идентификатор"%></th>

      <th><%= sortable "bday", "Дата рождения" %></th>
      <th><%= sortable "lastfeed", "Последнее кормление"%></th>
      <th><%= sortable "nextfeed", "Следующее кормление"%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>

        <td class="pet-name"><%= link_to pet.name, pet %></td>

        <td><%= pet.bday %></td>
      <td><%= pet.lastfeed%></td>
      <td><%= pet.nextfeed%></td>
      <td>
      <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
        <%= link_to 'Покормить', pets_feeding_path(pet), class: "btn btn-success" %>
        <%= link_to 'Изменить', edit_pet_path(pet), class: "btn btn-secondary" %>
        <%= link_to 'Удалить', pet, method: :delete, data: { confirm: 'Вы уверенны?' }, class: "btn btn-danger" %>
      </div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%  if user_signed_in? %>
<%= link_to 'Добавить животное', new_pet_path, class: "btn btn-success btn-block" %>
<% end %>