<div class="jumbotron">


<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
   <div class="field">
        <%= f.label :Псевдоним %><br />
        <%= f.text_field :nikname, autofocus: true %>
   </div>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :пароль %>
    <% if @minimum_password_length %>
    <em>(минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Подтвердите_пароль %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Регистрация", class: "btn btn-success" %>
  </div>
<% end %>
  <br>
  <%= render "devise/shared/links" %>

</div>
