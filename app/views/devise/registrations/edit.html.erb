<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="field">
    <%= f.label :Псевдоним %><br />
    <%= f.text_field :nikname, autofocus: true %>
  </div>
      <br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
      <br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="field">
    <%= f.label :Текущий_пароль %> <i>(введите пароль для подтверждения изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>
      <br>
  <div class="field">
    <%= f.label :новый_пароль %> <i>(Оставьте пустым, если не хотите менять пароль)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
    <br />
    <em>минимум <%= @minimum_password_length %> символов</em>
    <% end %>
  </div>
      <br>
  <div class="field">
    <%= f.label :подтвердите_пароль %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
      <br>
      <div class="actions">
    <%= f.submit "Обновить", class: "btn btn-success"  %>
      </div>
  <% end %>

  <%= button_to "Удалить аккаунт", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "вы уверенны, что хотите удалить ваш аккаунт?" }, method: :delete %>





<%= link_to "Назад", :back %>
